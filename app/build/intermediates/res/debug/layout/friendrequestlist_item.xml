<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.nxtty.main"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/wrapper_friendrequestlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp" >

        <RelativeLayout
            android:id="@+id/leftside_friendrequestlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/imageview_friendrequestlist_item"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/logo"
                 />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/center_friendrequestlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/leftside_friendrequestlist" >

            <TextView
                android:id="@+id/textview_friendname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:padding="5dp"
                android:paddingBottom="3dp"
                android:text="Abc"
                android:textColor="#A5A5A5"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_friendstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_friendname"
                android:padding="5dp"
                android:text="Male/No School"
                android:textColor="#A5A5A5" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout><!-- From: file:/C:/NXTAPP_Feb_032/app/src/main/res/layout/friendrequestlist_item.xml -->