<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.nxtty.main"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/wrapper_newsfeedlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/leftside_newsfeedlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="2dp" >

                <ImageView
                    android:id="@+id/imageview_Commentlist_item"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/logo_app_icon"
                     />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/center_newsfeedlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/leftside_newsfeedlist"
                android:layout_weight="1" >

                <com.nextapp.fonts.GothicLTMedium
                    android:id="@+id/textview_Commentname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Abc"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginTop="3dip"
                    android:textStyle="bold" />

                <com.nextapp.fonts.GothicLTMedium
                    android:id="@+id/textview_Commenttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_Commentname"
                    android:text="9 minutes ago"
                    android:textColor="@color/grey_text"
                    android:textSize="9sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ln_tip_comment"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/red_round"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/tip"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_delete_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/red_round"
                android:gravity="center"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/round_corners_red"
                    android:padding="5dp"
                    android:text="@string/delete"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <com.aniways.AniwaysTextView
                android:id="@+id/textview_Commnetdescripltion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:layout_toLeftOf="@+id/ln_Editfeed"
                android:autoLink="web"
                android:linksClickable="false"
                android:maxLength="7500"
                android:padding="3dp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/ln_Editfeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/btn_edit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit"
                    android:textColor="#FF0000"
                    android:textSize="13sp" />
            </LinearLayout>
        </RelativeLayout>

     
    </LinearLayout>

</RelativeLayout><!-- From: file:/C:/NXTAPP_Feb_032/app/src/main/res/layout/commentlist_item.xml -->