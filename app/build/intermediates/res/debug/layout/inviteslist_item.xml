<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res/com.nxtty.main"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/wrapper_inviteslist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="3dp" >

        <RelativeLayout
            android:id="@+id/leftside_inviteslist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/imageview_inviteslist_item"
                android:layout_width="75dp"
                android:layout_height="75dp"

                android:src="@drawable/logo" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/center_inviteslist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/leftside_inviteslist"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textview_invitename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="Abc"
                android:textColor="#A5A5A5"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_invitestatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_invitename"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="Male/No School"
                android:textColor="#A5A5A5" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/right_inviteslist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="5dp" >

            <Button
                android:id="@+id/button_accept"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:background="@drawable/accept"
                android:text="@string/accept"
                android:padding="5dp"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <Button
                android:id="@+id/button_reject"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:layout_toRightOf="@+id/button_accept"
                android:background="@drawable/add_button"
                android:text="@string/reject"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout><!-- From: file:/C:/NXTAPP_Feb_032/app/src/main/res/layout/inviteslist_item.xml -->