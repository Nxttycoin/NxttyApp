<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_margin="7dp"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_title_create_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_post"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >
            </LinearLayout>

            <TextView
                android:id="@+id/txt_create_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/cancel"
                android:textColor="@color/grey_text"
                android:textSize="16sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/red" >
            </View>

            <TextView
                android:id="@+id/txtPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/post"
                android:textColor="@color/red"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/grey_text" >
        </LinearLayout>

        <com.aniways.AniwaysVerticalLinearLayout
            android:id="@+id/chat_activity_root"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="4dip" >

                <com.aniways.AniwaysEditText
                    android:id="@+id/edit_CreateDetail"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:cursorVisible="true"
                    android:fadingEdge="vertical"
                    android:gravity="top"
                    android:hint="@string/write_story"
                    android:imeOptions="actionSend|flagNoEnterAction|flagNoExtractUi"
                    android:maxLength="10000"
                    android:paddingBottom="7dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="7dp"
                    android:scrollbars="vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ivCamera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/camera_create" />

                <ImageView
                    android:id="@+id/ivGallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/galary_create" />

                <!-- <View -->
                <!-- android:layout_width="0dp" -->
                <!-- android:layout_height="1dp" -->
                <!-- android:layout_weight="1" /> -->

                <com.aniways.AniwaysEmoticonsOnDemandButton
                    android:id="@+id/emoticons_button"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:padding="3dp" />

                <!-- <ImageView -->
                <!-- android:id="@+id/ivSend" -->
                <!-- android:layout_width="wrap_content" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:layout_marginLeft="5dp" -->
                <!-- android:layout_marginRight="5dp" -->
                <!-- android:src="@drawable/send_create" /> -->
            </LinearLayout>
        </com.aniways.AniwaysVerticalLinearLayout>

        <ImageView
            android:id="@+id/img_create_attach"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout><!-- From: file:/C:/NXTAPP_Feb_032/app/src/main/res/layout/create_post.xml -->