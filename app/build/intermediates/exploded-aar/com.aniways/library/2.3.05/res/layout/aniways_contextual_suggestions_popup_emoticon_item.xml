<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:paddingRight="0dp"
	android:paddingLeft="0dp"
    android:background="@color/aniways_transparent"
    android:clickable="true"
    android:gravity="center_vertical|center_horizontal" >

    <!-- The width and height values are not really respected. The value is taken from the configured iconInSuggestionPopupSize -->
    <RelativeLayout
        android:id="@+id/relative_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.aniways.volley.toolbox.NetworkImageView
            android:id="@+id/aniways_action_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside" />
             </RelativeLayout>

    <ImageView
        android:id="@+id/aniways_ebp_emoticons_item_locked_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:visibility="gone"
        android:src="@drawable/aniways_locked_icon" />

