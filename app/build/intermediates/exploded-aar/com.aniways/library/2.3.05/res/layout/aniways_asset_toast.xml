              android:paddingStart="@dimen/aniways_asset_toast_corner_radius"
              android:paddingEnd="@dimen/aniways_asset_toast_corner_radius">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
