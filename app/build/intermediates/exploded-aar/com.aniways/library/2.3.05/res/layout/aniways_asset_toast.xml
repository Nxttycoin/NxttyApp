              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/aniways_asset_toast_height"
              android:background="@drawable/aniways_toast_background"
              android:paddingLeft="@dimen/aniways_asset_toast_corner_radius"
