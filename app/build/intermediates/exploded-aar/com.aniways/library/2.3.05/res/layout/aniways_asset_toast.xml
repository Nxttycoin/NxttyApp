            android:id="@+id/aniways_asset_toast_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Aniways.Toast.Text"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
