<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/lnMainList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="3dp"
                android:src="@drawable/newsfeed_inner" />

            <LinearLayout
                android:id="@+id/lnFirstFooter"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/red"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="3dp"
                android:src="@drawable/openchat_add_icon" />

            <LinearLayout
                android:id="@+id/lnSecondFooter"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/red"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="3dp"
                android:src="@drawable/openchat_search" />

            <LinearLayout
                android:id="@+id/lnThirdFooter"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/red"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="3dp"
                android:src="@drawable/openchat_settings_new" />

            <LinearLayout
                android:id="@+id/lnFourthFooter"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/red"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal" >
    </LinearLayout>

    <android.support.v4.view.ViewPager

        android:id="@+id/pagerOpenChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>