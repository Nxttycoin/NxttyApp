<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="incomingClTxt">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/incomingCallTxt</item>
    </style>

    <style name="incomingClUser">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/incomingCallUser</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="incomingClPhnNum">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/incomingClPhnNum</item>
    </style>

    <style name="inClUser">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/incomingCallTxt</item>
    </style>

    <style name="inClCallDuration">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/inClCallDuration</item>
    </style>

    <style name="RoboTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

</resources>